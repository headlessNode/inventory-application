<fieldset class="w-full border border-red-400 rounded-md py-10 px-8 flex flex-wrap gap-4 justify-start items-center">
    <legend class="bg-red-500 p-2 text-white">Delete Game</legend>
    <% games.forEach(game => { %>
        <form class="flex flex-wrap gap-4" action="/admin/authorize" method="post">
            <input type="hidden" name="id" value="<%= game.id %>">
            <button type="submit" class="w-52 truncate border game-btn py-2 px-4 rounded-md hover:bg-red-500 hover:text-white" data-game="<%= game.id %>"><%= game.title %></button>
        </form>
    <% }) %>
</fieldset>