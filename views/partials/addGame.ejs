<fieldset class="border border-indigo-600 rounded-md py-10 px-8">
    <legend class="bg-indigo-400 p-2 text-white">Add a New Game</legend>
    <%- include("errors.ejs") %>
    <form action="/admin/addgame" method="post" class="w-full add-game-form">
        <div class="w-full flex flex-col justify-center items-center gap-3">
            <div class="w-full flex flex-wrap justify-center items-center gap-3">
                <div class="w-full md:w-1/3 flex flex-col gap-4">
                    <div class="flex flex-col gap-2">
                        <label for="title">Game Title</label>
                        <input class="border w-full py-2 px-4 rounded-md" type="text" name="title" id="title" required>
                    </div>
                    <div class="dev-container flex flex-col gap-2">
                        <label for="developers[]">Developers</label>
                        <div class="inputs flex flex-col gap-2">
                            <input class="border w-full py-2 px-4 rounded-md" type="text" name="developers[]" maxlength="50" required>
                        </div>
                        <button type="button" class="mt-2 border rounded-md py-2 px-4 w-full hover:bg-indigo-400 hover:text-white">Add Another Developer</button>
                    </div>
                </div>
                <div class="w-full md:w-1/3 flex flex-col gap-4">
                    <div class="flex flex-col gap-2">
                        <label for="img_url">Image URL</label>
                        <input type="url" class="border w-full py-2 px-4 rounded-md" name="img_url" id="img_url" required>
                    </div>
                    <div class="genre-container flex flex-col gap-2">
                        <label for="genre[]">Genres</label>
                        <div class="inputs flex flex-col gap-2">
                            <input class="border w-full py-2 px-4 rounded-md" type="text" name="genres[]" maxlength="50" required>
                        </div>
                        <button type="button" class="mt-2 border rounded-md py-2 px-4 w-full hover:bg-indigo-400 hover:text-white">Add Another Genre</button>
                    </div>
                </div>
            </div>
            <div class="w-2/3 flex flex-wrap justify-between items-center gap-4">
                <button class="flex-1 border rounded-md py-2 px-4 hover:bg-indigo-400 hover:text-white" type="submit">Add Game</button>
                <button class="flex-1 border rounded-md py-2 px-4 hover:bg-red-500 hover:text-white" type="reset">Cancel</button>
            </div>
        </div>
    </form>
</fieldset>
